<%= render 'form' %>
<br/>

<% if @current_album_type.name.singularize == 'Picture' %>
  <%= link_to(new_picture_path(:imageable_id => @album.id, :imageable_type => 'Album'), class: "button-xs") do %>
    <i class="icon-add"></i> Add <%= @current_album_type.name.singularize %>
  <% end %>
<% elsif @current_album_type.name.singularize == 'Video' %>
  <%= link_to(new_video_path(:imageable_id => @album.id, :imageable_type => 'Album'), class: "button-xs") do %>
    <i class="icon-add"></i> Add <%= @current_album_type.name.singularize %>
  <% end %>
<% end %>

<%= link_to(@album, class: "button-xs") do %>
  <i class="icon-view"></i> View
<% end %>

<%= link_to(albums_path(:album_type => @current_album_type.id), class: "button-xs") do %>
  <i class="icon-list"></i> List <%= @current_album_type.name.singularize %> Albums
<% end %>
