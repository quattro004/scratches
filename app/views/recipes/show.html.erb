<p class="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @recipe.title %>
</p>

<p>
  <b>Author:</b>
  <%= @recipe.author %>
</p>

<p>
  <b>Comment:</b>
  <%= @recipe.comment %>
</p>

<p>
  <b>Variations:</b>
  <%= @recipe.variations %>
</p>

<p>
  <b>Category:</b>
  <%= @recipe.category_id %>
</p>

<fieldset>
  <legend>Ingredients:</legend>
  <ul>
    <% for ingredient in @recipe.ingredient %>
      <% unless ingredient.secret %>
        <li><%=h ingredient.amount %> <%=h ingredient.name %></li>
      <% end %>
    <% end %>
  </ul>
</fieldset>

<p>
  <b>Instructions:</b>
  <%= @recipe.instructions %>
</p>

<p>
  <b>Keywords:</b>
  <%= @recipe.keywords %>
</p>

<p>
  <b>Prep Time:</b>
  <%= @recipe.prep_time_in_minutes %>
</p>

<p>
  <b>Cook Time:</b>
  <%= @recipe.cook_time_in_minutes %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
