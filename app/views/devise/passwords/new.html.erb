<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-inline' }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :email, :placeholder => 'Email', :autofocus => true %>

  <%= f.submit "Send me reset password instructions", :class => 'btn btn-success' %>
<% end %>

