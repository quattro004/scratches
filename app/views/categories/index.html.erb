<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><h2>Name</h2></th>
      <th><h2>Description</h2></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td>
          <%= link_to(edit_category_path(category), class: "btn btn-small btn-success") do %>
            <i class="icon-edit icon-white"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to(category, class: "btn btn-small btn-danger", :confirm => "Are you sure you want to delete #{category.name}?", :method => :delete) do %>
            <i class="icon-trash icon-white"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to(new_category_path, class: "btn btn-success") do %>
  <i class="icon-plus icon-white"></i> New Category
<% end %>
